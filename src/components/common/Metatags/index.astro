---
import {SITE_URL, SITE_HOST, SITE_TITLE} from '../../../constants';
import {ViewTransitions} from 'astro:transitions';

export interface Props {
  url: string;
  pageTitle: string;
  description: string;
}

const {pageTitle, url, description} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const isBlogPost = url.startsWith('/blog/');
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
<meta name="title" content={pageTitle} />
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />
<meta property="og:type" content={isBlogPost ? 'article' : 'website'} />
<meta property="og:title" content={pageTitle} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:description" content={description} />
<meta name="google-site-verification" content="j9pUWx-bcMeo7WSshAo4uQkErDiXNkb0KqJ8-DWWLs8" />
<link rel="canonical" href={canonicalURL} data-baseprotocol="https:" data-basehost={SITE_HOST} />
<link rel="alternate" type="application/rss+xml" title="RSS Feed" href={`${SITE_URL}/rss.xml`} />
<link rel="sitemap" href={`${SITE_URL}/sitemap-index.xml`} />
<link rel="preload" href="/fonts/Pretendard-Bold.woff" as="font" type="font/woff2" />
<link rel="preload" href="/fonts/Pretendard-Regular.woff" as="font" type="font/woff2" />
<link rel="preload" href="/fonts/Pretendard-Light.woff" as="font" type="font/woff2" />
<link rel="preload" rel="stylesheet" href="/prism/prism-duotone-sea.css" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={pageTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:card" content="summary_large_image" />
<ViewTransitions />
