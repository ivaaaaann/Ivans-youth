---
import Flex from '../../components/common/Flex';
import {resumeContainerStyle, resumeContentContainerStyle, resumeWrapStyle} from './index.css';
import Txt from '../../components/common/Txt';
import {SITE_TITLE, SITE_DESCRIPTION} from '../../constants';
import Metatags from '../../components/common/Metatags/index.astro';
import '../../styles/globalStyle.css';
import '../../styles/theme.css';
import '../../styles/fonts.css';
import ResumeHeader from '../../components/resume/components/ResumeHeader/index.astro';
import ResumeAboutMeSection from '../../components/resume/components/ResumeAboutMeSection/index.astro';
import ResumeSkillsSection from '../../components/resume/components/ResumeSkillsSection/index.astro';
import ResumeWorkExperienceSection from '../../components/resume/components/ResumeWorkExperienceSection/index.astro';
import ResumeOtherExperienceSection from '../../components/resume/components/ResumeOtherExperienceSection/index.astro';
import ResumeContactsSection from '../../components/resume/components/ResumeContactsSection/index.astro';
import ResumeEducationSection from '../../components/resume/components/ResumeEducationSection/index.astro';

export interface Props {
  url?: string;
  pageTitle?: string;
  description?: string;
}

const {pageTitle = SITE_TITLE, url = '/', description = SITE_DESCRIPTION} = Astro.props;
---

<!doctype html>
<html lang="ko">
  <head>
    <Metatags url={url} pageTitle={pageTitle} description={description} />
    <title>{pageTitle} | Ivan's Youth</title>
  </head>
  <body class={resumeContainerStyle}>
    <Flex direction="column" align="center">
      <Flex direction="column" className={resumeWrapStyle} gap={40}>
        <ResumeHeader />
        <Flex direction="column">
          <Txt as="h1" size="titleXLarge" family="heading" color="gray200">
            🛫 안녕하세요, 소프트웨어 엔지니어 임동현입니다.
          </Txt>
          <Flex direction="column" gap={64} className={resumeContentContainerStyle}>
            <ResumeAboutMeSection />
            <ResumeWorkExperienceSection />
            <ResumeOtherExperienceSection />
            <ResumeSkillsSection />
            <ResumeEducationSection />
            <ResumeContactsSection />
          </Flex>
        </Flex>
      </Flex>
    </Flex>
  </body>
</html>
