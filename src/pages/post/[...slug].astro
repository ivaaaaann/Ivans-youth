---
import {type CollectionEntry, getCollection} from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import {GET} from '../api/views';
import PostContent from './PostContent.astro';

export const getStaticPaths = async () => {
  const posts = await getCollection('blog');

  return posts.map((post) => ({
    params: {slug: post.slug},
    props: post,
  }));
};

type Props = CollectionEntry<'blog'>;

const post = Astro.props;

const viewCountResponse = await GET({
  ...Astro,
  params: {
    slug: post.slug,
  },
});

const viewCountData = await viewCountResponse.json();
---

<Layout pageTitle={post.data.title}>
  <PostContent post={post} viewCount={viewCountData.data.count ?? 0} />
</Layout>
