---
import {Image} from 'astro:assets';
import Flex from '../../components/common/Flex';
import Txt from '../../components/common/Txt';
import CareerSection from '../../components/about/CareerSection';
import Icon, {type IconKey} from '../../components/common/Icon/index.astro';

import Layout from '../../layouts/Layout.astro';
import {
  aboutAvatarContainerStyle,
  aboutIntroductionLeftContainerStyle,
  aboutIntroductionHighlightStyle,
  aboutSectionTitleStyle,
  aboutIntroductionRightContainerStyle,
  aboutSocialIconStyle,
} from './index.css';
import {QUOTALAB_CARRER, SOCIAL_GITHUB, SOCIAL_GMAIL, SOCIAL_LINKEDIN} from '../../constants';
import AboutCarrerSection from './AboutCarrerSection';

const SOCIAL_LINK_ICONS_MAP: {icon: IconKey; link: string}[] = [
  {
    icon: 'mail',
    link: SOCIAL_GMAIL,
  },
  {
    icon: 'github',
    link: SOCIAL_GITHUB,
  },
  {
    icon: 'linkedIn',
    link: SOCIAL_LINKEDIN,
  },
];
---

<Layout pageTitle="About">
  <Flex direction="column" gap={20}>
    <Flex direction="column" gap={36}>
      <Flex justify="space-between" gap={48}>
        <Flex
          direction="column"
          gap={20}
          justify="space-between"
          className={aboutIntroductionLeftContainerStyle}
        >
          <Txt size="xxlarge" weight="heading">안녕하세요 🛫</Txt>
          <Flex direction="column" gap={16}>
            <Txt size="large" weight="heading">
              <bold class={aboutIntroductionHighlightStyle}>깊게 알기 위해</bold>
               고민하는 개발자, 임동현입니다
            </Txt>
            <Flex direction="column" gap={12}>
              <Txt lineHeight="xlarge">
                지식의 근간을 파악하고 있는 개발자가 사용자에게 안정적인 서비스 제공할 수 있다고
                생각하며, 따라서 깊게 알기 위해 노력합니다.
              </Txt>
              <Txt>주로 기술적 고민과 회고, 인생에 대한 고찰 정도로 글을 올립니다.</Txt>
            </Flex>
          </Flex>
        </Flex>
        <Flex
          direction="column"
          justify="space-between"
          className={aboutIntroductionRightContainerStyle}
          gap={6}
        >
          <Image
            width={165}
            height={165}
            src="/assets/Ivan.jpg"
            alt="ivan"
            class={aboutAvatarContainerStyle}
          />
          <Flex justify="center" align="center" gap={12}>
            {
              SOCIAL_LINK_ICONS_MAP.map(({icon, link}) => (
                <a
                  class={aboutSocialIconStyle}
                  href={link}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name={icon} size={16} />
                </a>
              ))
            }
          </Flex>
        </Flex>
      </Flex>
      <Flex direction="column" gap={32}>
        <Txt size="xxxlarge" weight="heading" className={aboutSectionTitleStyle}>Career</Txt>
        <AboutCarrerSection carrer={QUOTALAB_CARRER} />
      </Flex>
    </Flex>
  </Flex>
</Layout>
